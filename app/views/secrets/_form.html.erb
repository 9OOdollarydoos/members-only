<%= form_with model: secret do |form| %>
  <div class = "post">
  <p><strong>Create Post</strong><p>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% secret.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% secret.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  </div>
<% end %>